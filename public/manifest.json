{
  "manifest_version": 3,
  "name": "DevTabs - エンジニア向けタブマネージャー",
  "version": "0.1.0",
  "description": "エンジニアのワークフローに最適化したタブ管理ツール",
  "permissions": ["tabs", "storage"],
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "side_panel": {
    "default_path": "index.html"
  }
}
